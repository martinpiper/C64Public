.skipSpace
	inc Animation1x1ScreenAddr
	bne .o1
	inc Animation1x1ScreenAddr+1
.o1
.advanceInputChar
	inc Animation1x1TextAddr
	bne .o2
	inc Animation1x1TextAddr+1
.o2
	rts
