!zn
PitchPosX !by 0
PitchPosXPixel !by 0
PitchPosY !by 0
PitchPosYPixel !by 0

.previousPosX !by -1
.previousPosY !by -1

PitchDrawOptimised

	lda PitchPosY
	cmp .previousPosY
	bne .do
	ldx PitchPosX
	cpx .previousPosX
	bne .do2

	; No difference, nothing to do
	rts

.do2
	stx .previousPosX
.do
	sta .previousPosY
	lsr
	lsr
	tay
	lda PitchDrawLo,y
	sta .smj+1
	lda PitchDrawHi,y
	sta .smj+2
	lda PitchDrawBanks,y
	jsr CartSelectBank_8K_NoSEI
	lda PitchPosY
	and #3
	tay
	lda PitchDrawLSBPos,y
	clc
	adc PitchPosX
	tax
.smj	jsr $1234
	jmp CartKillBank
	
; This draws the map at any position using speed code
PitchDrawLSBPos
!for .ii , 4 {
!set .i = .ii - 1
	!by .i * PitchMapData_Width
}

