	; The bottom bricks
	lda GameScreen2 + (19*40) + 39
	pha
	lda GameScreen2 + (20*40) + 39
	pha
	ldx #39
.scrx2
!for .y , 2 {
!set .yy = 19 +.y-1
	lda GameScreen2 + (.yy*40) -1 ,x
	sta GameScreen2 + (.yy*40) ,x
}
	dex
	bne .scrx2
	pla
