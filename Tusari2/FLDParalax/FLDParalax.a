	; This update is for the last three char rows of the far background, the near plane
.smxscr1	lda #0
	beq .nox2
	lda GameScreen2 + (18*40) + 39
	pha
	ldx #39
.scrx3
	lda GameScreen2 + (18*40) -1 ,x
	sta GameScreen2 + (18*40) ,x
	dex
	bne .scrx3
	pla
