;	inc VIC2BorderColour
	inc FLDSize3_smx2
	inc FLDSize3_smx2
	lda FLDSize3_smx2
	and #7
	sta FLDSize3_smx2
	bne .no1
	+MProcessCharLine 14
	+MProcessCharLine 15
	+MProcessCharLine 16
	+MProcessCharLine 17
.no1
