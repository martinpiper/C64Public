@echo off
SETLOCAL
del Scroller.prg Scroller.map

rem Usually pass in a parameter for the build customisation you want to use
IF [%1] == [] SET CHOICE=ScrollEntry_MultiDirection.a
rem IF [%1] == [] SET CHOICE=ScrollEntry_SEUCK.a
IF NOT [%1] == [] SET CHOICE=%1

echo Build choice: %CHOICE%

echo ;This file is automatically generated by BuildIt.bat >FingerPrint.a
echo !scr "%TIME% %DATE% %COMPUTERNAME% %USERNAME%" >>FingerPrint.a

..\acme.exe -v4 --msvc --lib ../ --lib ../Scroller/ ScrollEntry.a %CHOICE% ScrollEntryAfter.a
if not exist Scroller.prg goto error
copy /y Scroller.prg ScrollerOrig.prg
rem ..\bin\LZMPi.exe -c64mu ScrollerOrig.prg Scroller.prg 1024 >t.txt
..\bin\LZMPi.exe -c64mr ScrollerOrig.prg Scroller.prg 1024 >t.txt
if not exist Scroller.prg goto error

rem No extra Ultimax boot, so use a simple empty address switch as placeholder for the command line
set CART_BOOT_TYPE=-tg
set CART_BOOT_TYPE_HI=-a $8000
rem Using Ultimax boot, so create the high bank with the reset vector
set CART_BOOT_TYPE=-te
set CART_BOOT_TYPE_HI=-a $a000 -b 0 -c $1ffc 2 4 -w

echo CART_BOOT_TYPE = %CART_BOOT_TYPE%

echo Making simple cart

set EXTRA_WILD_CARD_FILES=-m bin\*.a $2000 s:bin\smp*.raw

rem First make a simple cart, without speed code
..\bin\MakeCart.exe -i _f_index1.a %CART_BOOT_TYPE% -n -a $8000 -b 0 -r ..\Citadel2\Citadel2Cart_8K.prg -c 0 2 $ffff -w %CART_BOOT_TYPE_HI% -r Scroller.prg -a $8000 -b 1 -c 0 $0001 $ffff -w -a $8000 -b 2 -c 0 $2001 $ffff -w -a $8000 -b 3 -c 0 $4001 $ffff -w -a $8000 -b 4 -c 0 $6001 $ffff -w -a $8000 -b 5 -c 0 $8001 $ffff -w -a $8000 -b 6 -c 0 $a001 $ffff -w %EXTRA_WILD_CARD_FILES% -o Scroller.crt >>t.txt

rem If there is no speed code enabled then skip the speed code generation
..\ExternalTools\Gnu\bin\sed.exe -n "/Scroller_EnableSpeedCode/q1" Scroller.map
IF NOT ERRORLEVEL 1 goto end

echo ;This file is automatically generated by BuildIt.bat >..\Scroller\CartCode\CartOpts.a

rem Extract all the required variables from this list to a separate file
for %%x in (
	Scroller_Enable
	Scroller_NeedFullColourScroll
	Scroller_Debug
	CharColoursForEveryCharacter
	Scroller_KillCartridgeBank
	Scroller_BankSwitchControl
	Scroller_ScrollBankEntry
	ScrollBankSplit
	Scroller_FullScreen
	Scroller_AdditionalCharLines
	ColourTemp
	CharColours
	topScreenBank
	BankToScreenAddr
	COLOURRAM
	ScrollerDrawStripBottom_GetBlockFromMap
	ScrollerDrawStripRight_GetBlockFromMap
	MapData
	scrollMapLX
	scrollMapHX
	scrollMapLY
	scrollMapHY
	BlockTabL
	BlockTabH
	tempWork
	MapTabL
	MapTabH
) do (
	..\ExternalTools\Gnu\bin\sed.exe -n "/%%x/p" Scroller.map >>..\Scroller\CartCode\CartOpts.a
)

if not exist bin mkdir bin
del bin\*.bin

rem Create the cartridge scroller speed code
echo ScreenA = $c800 >..\Scroller\CartCode\ScreenConfig.a
echo ScreenB = $cc00 >>..\Scroller\CartCode\ScreenConfig.a

..\ExternalTools\Gnu\bin\sed.exe -n "/Scroller_EnableBlockColourSpeedCodeInCart/q1" Scroller.map
IF NOT ERRORLEVEL 1 goto noColourise
echo Adding speed colourise code
..\acme.exe --msvc --lib ../Scroller/ -o bin\ColouriseTop.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\HeaderEntry.a ScrollerStripsMacros.a ScrollerStripsColouriseTop.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\ColouriseBottom.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\HeaderEntry.a ScrollerStripsMacros.a ScrollerStripsColouriseBottom.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\ColouriseLeft.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\HeaderEntry.a ScrollerStripsMacros.a ScrollerStripsColouriseLeft.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\ColouriseRight.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\HeaderEntry.a ScrollerStripsMacros.a ScrollerStripsColouriseRight.a
:noColourise

..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_1.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_1.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_m1.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m1.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_40.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_40.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_m40.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m40.a

..\ExternalTools\Gnu\bin\sed.exe -n "/Scroller_MultiDirectionNoDiagonals/q1" Scroller.map
IF ERRORLEVEL 1 goto noDiagonals1

..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_39.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_39.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_m39.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m39.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_41.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_41.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char0To1_m41.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m41.a

:noDiagonals1

echo ScreenA = $cc00 >..\Scroller\CartCode\ScreenConfig.a
echo ScreenB = $c800 >>..\Scroller\CartCode\ScreenConfig.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_1.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_1.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_m1.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m1.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_40.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_40.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_m40.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m40.a

..\ExternalTools\Gnu\bin\sed.exe -n "/Scroller_MultiDirectionNoDiagonals/q1" Scroller.map
IF ERRORLEVEL 1 goto noDiagonals2

..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_39.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_39.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_m39.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m39.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_41.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_41.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Char1To0_m41.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m41.a

:noDiagonals2

..\ExternalTools\Gnu\bin\sed.exe -n "/ColourTemp/q1" Scroller.map
IF NOT ERRORLEVEL 1 goto noColours

echo ScreenA = $d800 >..\Scroller\CartCode\ScreenConfig.a
echo ScreenB = $d800 >>..\Scroller\CartCode\ScreenConfig.a
echo ScreenBTemp = ColourTemp >>..\Scroller\CartCode\ScreenConfig.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_1.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_1.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_m1.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m1.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_40.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_40.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_m40.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m40.a

..\ExternalTools\Gnu\bin\sed.exe -n "/Scroller_MultiDirectionNoDiagonals/q1" Scroller.map
IF ERRORLEVEL 1 goto noDiagonals3

..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_39.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_39.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_m39.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m39.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_41.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_41.a
..\acme.exe --msvc --lib ../Scroller/ -o bin\Colour_m41.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\Scroll_m41.a

:noDiagonals3

:noColours


..\ExternalTools\Gnu\bin\sed.exe -n "/Scroller_EnableBlockStripsSpeedCodeInCart/q1" Scroller.map
IF NOT ERRORLEVEL 1 goto noStrips1
echo Adding speed strips code

..\acme.exe --msvc --lib ../ --lib ../Scroller/ -o bin\BlockStrips.bin --lib ../Scroller/CartCode/ CartCode\Header.a CartCode\HeaderEntry.a ScrollerStripsMacros.a ScrollerStripsTop.a ScrollerStripsBottom.a ScrollerStripsLeft.a ScrollerStripsRight.a CartCode\StripsOffsets.a

echo ;This file is automatically generated by BuildIt.bat >bin\StripOffsets.a
..\ExternalTools\Gnu\bin\sed.exe -n "/kCartOffset_ScrollerDrawStrip/p" bin\cart.map >>bin\StripOffsets.a


:noStrips1

rem If the files are missing then they are simply not included in the cart
set SCROLLER_SPEED_CODE_FILES_NUM=29
set SCROLLER_SPEED_CODE_FILES=bin\ColouriseTop.bin+! bin\Char0To1_1.bin bin\Char1To0_1.bin bin\ColouriseBottom.bin+! bin\Char0To1_m1.bin bin\Char1To0_m1.bin bin\ColouriseLeft.bin+! bin\Char0To1_40.bin bin\Char1To0_40.bin bin\ColouriseRight.bin+! bin\Char0To1_m40.bin bin\Char1To0_m40.bin bin\Char0To1_41.bin bin\Char1To0_41.bin bin\Char0To1_39.bin bin\Char1To0_39.bin bin\Char0To1_m41.bin bin\Char1To0_m41.bin bin\Char0To1_m39.bin bin\Char1To0_m39.bin bin\Colour_1.bin bin\Colour_m1.bin bin\Colour_40.bin bin\Colour_m40.bin bin\Colour_39.bin bin\Colour_m39.bin bin\Colour_41.bin bin\Colour_m41.bin bin\BlockStrips.bin

echo Adding speed code

..\bin\MakeCart.exe -i _f_index1.a -tg -n -a $8000 -b 7 -f $2000 %SCROLLER_SPEED_CODE_FILES_NUM% %SCROLLER_SPEED_CODE_FILES% %EXTRA_WILD_CARD_FILES% -o Scroller.crt >>t.txt

rem Build the final code again to get the offsets
..\acme.exe -v4 --msvc --lib ../ --lib ../Scroller/ ScrollEntry.a %CHOICE% ScrollEntryAfter.a >tf.txt
if not exist Scroller.prg goto error
copy /y Scroller.prg ScrollerOrig.prg
rem If the game refuses to start properly, or crashes during decompression, then it might be because the -c64b decompressor does not like going all the way up to $ffff
rem ..\bin\LZMPi.exe -c64mu ScrollerOrig.prg Scroller.prg 1024 >tf.txt
..\bin\LZMPi.exe -c64mr ScrollerOrig.prg Scroller.prg 1024 >tf.txt

..\bin\MakeCart.exe -i _f_index1.a %CART_BOOT_TYPE% -n -a $8000 -b 0 -r ..\Citadel2\Citadel2Cart_8K.prg -c 0 2 $ffff -w %CART_BOOT_TYPE_HI% -r Scroller.prg -a $8000 -b 1 -c 0 $0001 $ffff -w -a $8000 -b 2 -c 0 $2001 $ffff -w -a $8000 -b 3 -c 0 $4001 $ffff -w -a $8000 -b 4 -c 0 $6001 $ffff -w -a $8000 -b 5 -c 0 $8001 $ffff -w -a $8000 -b 6 -c 0 $a001 $ffff -w -a $8000 -b 7 -f $2000 %SCROLLER_SPEED_CODE_FILES_NUM% %SCROLLER_SPEED_CODE_FILES% %EXTRA_WILD_CARD_FILES% -o Scroller.crt >>tf.txt


goto end
:error
echo Scroller.prg not created!
exit /B -1
:end
