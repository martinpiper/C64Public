TitleRunLogic
	; Can happen outside the VBlank
.smc1	lda #0
	+lbne .noFreeSlot1

	lda #2
	sta .smc1+1

	lda .timeToAirplanes
	bmi .noMoreAirplanes
	dec .timeToAirplanes
	beq .runAirplanes1

.noMoreAirplanes
	lda .timeToMissiles
	beq .runMissles1

	dec .timeToMissiles
	jmp .noFreeSlot1

.runAirplanes1
	jsr EntityFindFreeSlot
	lda #0
	sta EntityXPos,x
	lda #-20
	sta EntityYPos,x
	lda #1
	sta EntityZPos,x
	lda #0
	sta EntityScaleTweak,x
	sta EntityRotationTweak,x
	lda #<EnemyPlaneGreen_landscapeRotationsFrame_to_animation
	sta EntityTypeLo,x
	lda #>EnemyPlaneGreen_landscapeRotationsFrame_to_animation
	sta EntityTypeHi,x
	sta EntityTypeIsRotating,x
	lda #<EntityState_EnemyPlaneGreenForward
	sta EntityStateLo,x
	lda #>EntityState_EnemyPlaneGreenForward
	sta EntityStateHi,x

	jmp .noFreeSlot1

.runMissles1
	lda .timeToStopMissiles
	beq .noFreeSlot1

	jsr EntityFindFreeSlot
	bcs .noFreeSlot1

	dec .timeToStopMissiles

	lda #-16
	sta EntityXPos,x
	lda #-16
	sta EntityYPos,x
	lda .missileZPos
	clc 
	adc #.missileZPosAdd
	sta .missileZPos
	sta EntityZPos,x
	lda #0
	sta EntityScaleTweak,x
	lda #<Render_WhiteSmoke
	sta EntityTypeLo,x
	lda #>Render_WhiteSmoke
	sta EntityTypeHi,x
	lda #0
	sta EntityTypeIsRotating,x

.noFreeSlot1
	dec .smc1+1
	rts

EntityState_EnemyPlaneGreenForward
	lda EntityZPos,y
	clc
	adc landscapeFrameSpeed
	+lbcs EntityState_RemoveEntity
	clc
	adc #1
	cmp #60
	+lbcs EntityState_RemoveEntity
	sta EntityZPos,y

	lda EntityXPos,y
	sec
	sbc #2
	sta EntityXPos,y

	lda EntityYPos,y
	clc
	adc #1
	sta EntityYPos,y

	lda EntityStateValue1,y
	clc
	adc #1
	sta EntityStateValue1,y
	and #3
	bne .slowRotation1
	lda EntityRotationTweak,y
	clc
	adc #1
	sta EntityRotationTweak,y
.slowRotation1

	rts
