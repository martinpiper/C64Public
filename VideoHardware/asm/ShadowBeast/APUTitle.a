	!by $88 , $01 , 170
	+MAPUEmitChangePalette 238 , 119 , 136
	!by $48 , $00 , 171
	+APUMultiplexStrip ~APUData_Tree5eData , kAPUData_Tree5eNum , 12 + kAPUData_Tree5aNum + kAPUData_Tree5bNum + kAPUData_Tree5cNum + kAPUData_Tree5dNum
	!by $88 , $01 , 174
