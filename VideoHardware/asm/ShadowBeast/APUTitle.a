	!by kBus24Bit_VideoLayer_LayersEnable_234

	+MLittleEndian16Bit kBus24Bit_Sprites + (.offset * 4)
.dataAddr = *
	!fill .num * 4 , 0
	
	; Reuses EADDR2
	!by kBus24Bit_VideoLayer_LayersEnable_Default
}

	+MAPU_EmitWait kBus24Bit_VideoLayer_XPos_SpriteIndex_0 , 113
