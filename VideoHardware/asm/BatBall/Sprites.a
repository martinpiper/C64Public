!zn
CopySpriteFrameData
	jsr Video_SetAddressSprites
	; Very optimised unrolled loop to copy sprite data in the vblank

	; Draw sprites
!for .ii , kMaxSprites {
!set .i = .ii - 1
	lda SpriteFrameDataFrame + .i
	sta CIA2PortBRS232
	lda SpriteFrameDataColour + .i
	sta CIA2PortBRS232
	lda SpriteFrameDataY + .i
	sta CIA2PortBRS232
	lda SpriteFrameDataX + .i
	sta CIA2PortBRS232
}

	; Draw shadows
!for .ii , kMaxSprites {
!set .i = .ii - 1
	lda SpriteFrameDataFrame + .i
	sta CIA2PortBRS232
	lda #$f	; Last palette is all black, for shadows
	sta CIA2PortBRS232
	lda SpriteFrameDataY + .i
	sec
	sbc #4
	sta CIA2PortBRS232
	lda SpriteFrameDataX + .i
	clc
	adc #4
	sta CIA2PortBRS232
}

	jsr Bus24Bit_Reset
	inc VIC2BorderColour
	rts

